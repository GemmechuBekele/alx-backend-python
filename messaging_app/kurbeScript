#!/bin/bash

# Check if Minikube is installed
if ! command -v minikube &> /dev/null
then
    echo "âŒ Minikube is not installed"
    exit 1
fi

echo "âœ… Minikube is installed"

# Start Kubernetes cluster
echo "ğŸš€ Starting Minikube cluster..."
minikube start

if [ $? -ne 0 ]; then
    echo "âŒ Failed to start Minikube"
    exit 1
fi

# Verify cluster is running
echo "ğŸ” Verifying cluster status with kubectl..."
kubectl cluster-info

if [ $? -ne 0 ]; then
    echo "âŒ kubectl failed to get cluster info"
    exit 1
fi

# Get available pods
echo "ğŸ“¦ Retrieving available pods..."
kubectl get pods --all-namespaces
